<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/stylesheets/style.css" />
  <!-- <script src="/scripts/app.js" defer></script> -->
  <title>Look upon these works!</title>
</head>
<!-- test putting my JS up here. -->

<body>
    <%- include('../partials/_navbar.ejs') %> 
  <h1>I love your work!</h1>
  <% arts.forEach(art => { %>
      <div id="gallery-card">
          
          <div class="flex-container">
            <%art.colorArray.forEach(color => { %>
              <div class="flex-item" style="background-color:<%=color %>"> </div>
            <%}); %>
          </div>
        
          <%= art.title %>    
          by <%= art.owner.username %>
      </div>
  <% }); %>
  <a href="/arts/new">Make more art!</a>
</body>
</html>
