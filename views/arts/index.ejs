<!-- views/applications/index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/stylesheets/style.css" />
  <title>Look upon these works!</title>
</head>

 
<body>
  
  <%- include('../partials/_navbar.ejs') %>

  <h1>I love your work!</h1>
  <div id="gallery-view">
   

    <%  for (let i = arts.length -1 ; i >= 0; i--){ %>

      <div id="gallery-card">
        <a href="/arts/<%= arts[i]._id %>">
          <div class="display-container">
            <%arts[i].colorArray.forEach(color => { %>
              <div class="flex-item" style="background-color:<%=color %>"> </div>
            <%}); %>
          </div> 
          
          <div id="title-card">
              <%= arts[i].title %>    
              by <%= arts[i].owner.username %>
              <p>(<%= arts[i].comments.length %>) Comments</p>           
          </div>
        </a> 
      </div>       
      <% }; %>
  
  </div>    
  <a href="/arts/new">Make more art!</a>
</body>
</html>
