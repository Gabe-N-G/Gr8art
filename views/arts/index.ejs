<!-- views/applications/index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/stylesheets/style.css" />
  <title>Look upon these works!</title>
</head>

 
<body>
  
  <%- include('../partials/_navbar.ejs') %>

  <h1>I love your work!</h1>
  <% arts.forEach(art => { %>

    <a href="/arts/<%= art._id %>">
      <div id="gallery-card">
          
          <div class="display-container">
            <%art.colorArray.forEach(color => { %>
              <div class="flex-item" style="background-color:<%=color %>"> </div>
            <%}); %>
          </div>
        
          <%= art.title %>    
          by <%= art.owner.username %>
      </div>
    </a>  
  <% }); %>
  <a href="/arts/new">Make more art!</a>
</body>
</html>
